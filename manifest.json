{
    "manifest_version": 2,
    "name": "Macca Password Gen",
    "version": "1.1",
    "description": "Generate a secure password",
    "homepage_url": "https://github.com/michaelpmcmillan/firefox-password-generator",
    "icons": {
        "48": "icons/key-solid-48.png"
    },
    "browser_action": {
        "default_icon": "icons/key-solid-48.png",
        "default_title": "Macca Password Gen",
        "default_popup": "popup/password_gen_view.html"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "macca-password-generator@mikemcmillan.dev",
            "strict_min_version": "42.0"
        }
    },
    "permissions": [
        "storage"
    ]
}